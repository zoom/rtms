{
  "name": "@zoom/rtms",
  "version": "0.0.5",
  "description": "Node.js Wrapper for the Zoom RTMS C SDK",
  "main": "./build/Release/index.js",
  "types": "rtms.d.ts",
  "type": "module",
  "scripts": {
    "install": "node scripts/rtms.js install",
    "// CLI commands": "Use the unified CLI for most operations",
    "rtms": "node scripts/rtms.js",
    "cli": "node scripts/rtms.js",
    "help": "node scripts/rtms.js help",

    "// Build commands - Node.js": "Build Node.js bindings for specific platforms",
    "build:js": "node scripts/rtms.js build js",
    "build:js:linux": "node scripts/rtms.js build js:linux",
    "build:js:darwin": "node scripts/rtms.js build js:darwin",

    "// Build commands - Python": "Build Python wheels for specific platforms",
    "build:py": "node scripts/rtms.js build py",
    "build:py:linux": "node scripts/rtms.js build py:linux",
    "build:py:darwin": "node scripts/rtms.js build py:darwin",

    "// Build commands - Go": "Build Go bindings for specific platforms",
    "build:go": "node scripts/rtms.js build go",
    "build:go:linux": "node scripts/rtms.js build go:linux",
    "build:go:darwin": "node scripts/rtms.js build go:darwin",

    "// Build modes": "Set or build with specific modes",
    "debug": "node scripts/rtms.js mode debug",
    "release": "node scripts/rtms.js mode release",

    "// Prebuild commands - Node.js": "Create Node.js prebuilds for distribution",
    "prebuild:js": "node scripts/rtms.js build prebuild:js",
    "prebuild:js:linux": "node scripts/rtms.js build prebuild:js:linux",
    "prebuild:js:darwin": "node scripts/rtms.js build prebuild:js:darwin",

    "// Upload commands - Node.js": "Upload Node.js prebuilds to GitHub releases",
    "upload:js": "node scripts/rtms.js build upload:js",
    "upload:js:linux": "node scripts/rtms.js build upload:js:linux",
    "upload:js:darwin": "node scripts/rtms.js build upload:js:darwin",

    "// Upload commands - Python (TestPyPI)": "Upload Python wheels to TestPyPI",
    "upload:py": "node scripts/rtms.js build upload:py",
    "upload:py:linux": "node scripts/rtms.js build upload:py:linux",
    "upload:py:darwin": "node scripts/rtms.js build upload:py:darwin",

    "// Upload commands - Python (Production)": "Upload Python wheels to production PyPI",
    "upload:py:prod": "node scripts/rtms.js build upload:py:prod",
    "upload:py:prod:linux": "node scripts/rtms.js build upload:py:prod:linux",
    "upload:py:prod:darwin": "node scripts/rtms.js build upload:py:prod:darwin",

    "// Test commands": "Run tests for different languages",
    "test": "node scripts/rtms.js test all",
    "test:js": "node scripts/rtms.js test js",
    "test:py": "node scripts/rtms.js test python",
    "test:go": "node scripts/rtms.js test go",
    "test:js-manual": "node scripts/rtms.js test js:manual",
    "test:py-manual": "node scripts/rtms.js test py:manual",

    "// Documentation commands": "Generate documentation",
    "docs": "node scripts/rtms.js docs all",
    "docs:js": "node scripts/rtms.js docs js",
    "docs:py": "node scripts/rtms.js docs python",

    "// Utility commands": "Various helper commands",
    "clean": "node scripts/rtms.js clean",
    "setup": "npm install && node scripts/rtms.js build all"
  },
  "dependencies": {
    "bindings": "^1.5.0",
    "node-addon-api": "^8.3.0",
    "prebuild-install": "^7.1.3",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "cmake-js": "^7.3.0",
    "typedoc": "^0.28.2",
    "typedoc-plugin-missing-exports": "^4.0.0",
    "typescript": "^5.8.3"
  },
  "overrides": {
    "tar-fs": ">=2.1.4",
    "form-data": ">=4.0.4"
  },
  "binary": {
    "napi_versions": [
      9,
      10
    ]
  },
  "files": [
    "CMakeLists.txt",
    "index.ts",
    "lib/darwin-arm64/.gitkeep",
    "lib/include/.gitkeep/",
    "lib/linux-x64/.gitkeep",
    "rtms.d.ts",
    "scripts",
    "src/{node,rtms}.cpp",
    "src/rtms.h",
    "tests",
    "tsconfig.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zoom/rtms.git"
  },
  "keywords": [
    "zoom",
    "rtms",
    "realtime",
    "media",
    "streaming",
    "real",
    "time",
    "sdk"
  ],
  "bugs": {
    "url": "https://github.com/zoom/rtms/issues"
  },
  "homepage": "https://github.com/zoom/rtms#readme",
  "author": "Zoom Communications, Inc.",
  "contributors": [
    {
      "name": "Max Mansfield",
      "email": "max.mansfield@zoom.us",
      "url": "https://www.npmjs.com/~maxmansfield"
    }
  ],
  "os": [
    "linux",
    "darwin"
  ],
  "cpu": [
    "x64",
    "arm64"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20.3.0"
  }
}
